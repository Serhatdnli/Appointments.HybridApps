@page "/admin/createclient"

@using Microsoft.AspNetCore.Components.Forms;


<Toasts class="p-3" Messages="messages" Placement="ToastsPlacement.TopRight" />

<h3>Yeni Personel Oluştur</h3>
<div class="row">
	<div class="col-4"></div>

	<div class="col-4 align-items-center">
		<div class="table-responsive ">
			<table class="table table-hover table-bordered table-striped">

				<tbody>
					<!-- Statik Satır -->
					<tr>
						<td>
							İsim
						</td>

						<td>
							<InputText @bind-Value:get="CreateClientRequest.Name" @bind-Value:set="(value) => {CreateClientRequest.Name = value;}" />
						</td>

					</tr>
					<tr>
						<td>
							Soyisim
						</td>

						<td>
							<InputText @bind-Value:get="CreateClientRequest.Surname" @bind-Value:set="(value) => {CreateClientRequest.Surname= value;}" />

						</td>
					</tr>
					<tr>
						<td>
							Email
						</td>
						<td>
							<InputText @bind-Value:get="CreateClientRequest.Email" @bind-Value:set="(value) => {CreateClientRequest.Email = value;}" />

						</td>
					</tr>
					
					<tr>

						<td>
							TC
						</td>
						<td>
							<InputText @bind-Value:get="CreateClientRequest.TcId" @bind-Value:set="(value) => {CreateClientRequest.TcId = value;}" />

						</td>
					</tr>
					<tr>

						<td>
							Telefon
						</td>
						<td>
							<InputText @bind-Value:get="CreateClientRequest.PhoneNumber" @bind-Value:set="(value) => {CreateClientRequest.PhoneNumber = value;}" />

						</td>
					</tr>
					

					<tr>
						<td colspan="2">
							<Button Class="col-12" Color="ButtonColor.Success" @onclick="() => CreateAsync()">
								Oluştur
							</Button>
						</td>
					</tr>
					

				</tbody>
			</table>
		</div>

	</div>

	<div class="col-4"></div>

</div>